# =========================================================
# 0. 通用設定
# =========================================================
APP_ENV=dev
LOG_LEVEL=INFO
SITE_UID=s001
DEVICE_UID=d0005
WORKER_NAME=s001d0005
WORKER_VERSION=1.0.0

# =========================================================
# 1. 路徑設定
# =========================================================
MNX_LIB_ROOT=/path/to/nexsys
RMQ_CFG_PATH=${MNX_LIB_ROOT}/NexCore/rabbitmq_cfg.json

# =========================================================
# 2. Modbus TCP 設定
# =========================================================
MODBUS_HOST=192.168.1.101
MODBUS_PORT=502
MODBUS_SLAVE_ID=1
MODBUS_FUNCTION_CODE=3
READ_INTERVAL_SEC=2
MODBUS_TIMEOUT=2

# 暫存器映射 (JSON 格式)
MODBUS_REGISTERS_MAPPING=[{"index":0,"key":"temp_c","unit":0.1,"decimals":1},{"index":1,"key":"humidity_rh","unit":0.1,"decimals":1}]
